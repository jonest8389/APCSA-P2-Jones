import static java.lang.System.*;

import java.util.Arrays;

public class RomanNumeral
{
	private Integer number = 0;
	private String roman = "";
	private int wasroman = 0;

	private final static int[] NUMBERS= {1000,900,500,400,100,90,
													50,40,10,9,5,4,1};

	private final static String[] LETTERS = {"M","CM","D","CD","C","XC",
												  "L","XL","X","IX","V","IV","I"};

	public RomanNumeral(String str)
	{
		setRoman(str);
	}

	public RomanNumeral(Integer orig)
	{
		setNumber(orig);
	}

	public void setNumber(Integer num)
	{
		roman = "";
		number = num;
		int newnum = number;
		for (int i = 0;i < NUMBERS.length;i++)
		{
			while (newnum - NUMBERS[i] >= 0)
			{
				newnum = newnum - NUMBERS[i];
				roman = roman + LETTERS[i];
			}
		}
		wasroman = 1;
	}
		

	public void setRoman(String rom)
	{
		String dli = "";
		int dlil = 0;
		number = 0;
		roman = rom;
		int romani = 0;
		int romanis = 0;
		for (int i = 0;i < roman.length();i++)
		{
			for (int j = 0;j < LETTERS.length;j++)
			{
				if (LETTERS[j].equals(Character.toString(
						roman.charAt(i))))
				{
					romani = j;
					romanis = j + 1;
				}
			}
			if (i != roman.length() - 1)
			{
				if (NUMBERS[romani] > NUMBERS[romanis])
				{
					dli = LETTERS[romani]
							+ LETTERS[romanis];
					for (int k = 0;k < LETTERS.length;k++)
					{
						if (LETTERS[k].equals(dli) == true)
						{
							dlil = k;
						}
					}
					number = number + NUMBERS[dlil];
					roman.replace(roman.charAt(romani), ' ');
					roman.replace(roman.charAt(romanis), ' ');
				}
				else
				{
					number = number + NUMBERS[romani];
					roman.replace(roman.charAt(romani), ' ');
				}
			}
			else
			{
				number = number + NUMBERS[romani];
				roman.replace(roman.charAt(romani), ' ');
			}
		}
		roman.replaceAll(" ", "");	
		wasroman = 2;
	}

	public Integer getNumber()
	{
		return number;
	}

	public String toString()
	{
		if (wasroman == 1)
		{
			return roman + "\n";
		}
		else if (wasroman == 2)
		{
			return number + "\n";
		}
		else
		{
			return null;
		}
	}
}