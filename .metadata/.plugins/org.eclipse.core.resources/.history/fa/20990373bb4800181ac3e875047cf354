import java.io.File;
import java.net.URL;
import java.awt.Color;
import java.awt.Graphics;
import java.awt.Image;
import javax.imageio.ImageIO;

public class Alien extends MovingThing
{
	private int speed;
	private Image image;
	private int rowdirection = 0;
	private int downstart;
	private int dead = 0;

	public Alien()
	{
		this(0,0,30,30,1);
	}

	public Alien(int x, int y)
	{
		this(x,y,30,30,1);
	}

	public Alien(int x, int y, int s)
	{
		this.setX(x); this.setY(y); setSpeed(s); this.setHeight(30); this.setWidth(30);
	}

	public Alien(int x, int y, int w, int h, int s)
	{
		super(x, y, w,h);
		speed=s;
		try
		{
			image = ImageIO.read(new File("C:\\Users\\jonest8389\\Desktop\\APCSA-P2-Jones\\Unit17\\src\\alien.jpg"));
		}
		catch(Exception e)
		{
			System.out.println("Error opening alien.jpg with exception " + e);
		}
	}

	public void setSpeed(int s)
	{
	   speed = s;
	}

	public int getSpeed()
	{
	   return speed;
	}
	
	public void setRowDirection(int rd,int ds)
	{
		rowdirection = rd;
		downstart = ds;
	}
	public int getRowDirection()
	{
		return rowdirection;
	}
	public int getDownStart()
	{
		return downstart;
	}
	public void setDead(int d)
	{
		dead = d;
	}
	public int getDead()
	{
		return dead;
	}

   public void move(String direction)
	{
	   if (direction.equals("LEFT"))
		{
			setX(super.getX() + speed);
		}
		if (direction.equals("RIGHT"))
		{
			setX(super.getX() - speed);
		}
		if (direction.equals("UP"))
		{
			setY(super.getY() + speed);
		}
		if (direction.equals("DOWN"))
		{
			setY(super.getY() - speed);
		}
	}

	public void draw( Graphics window )
	{
   	window.drawImage(image,getX(),getY(),getWidth(),getHeight(),null);
	}

	public String toString()
	{
		return super.toString() + getSpeed();
	}
}
