import static java.lang.System.*;

import java.util.Arrays;

public class RomanNumeral
{
	private Integer number = 0;
	private String roman = "";
	private int wasroman = 0;

	private final static int[] NUMBERS= {1000,900,500,400,100,90,
													50,40,10,9,5,4,1};

	private final static String[] LETTERS = {"M","CM","D","CD","C","XC",
												  "L","XL","X","IX","V","IV","I"};

	public RomanNumeral(String str)
	{
		setRoman(str);
	}

	public RomanNumeral(Integer orig)
	{
		setNumber(orig);
	}

	public void setNumber(Integer num)
	{
		number = num;
		int newnum = number;
		for (int i = 0;i < NUMBERS.length;i++)
		{
			while (newnum - NUMBERS[i] >= 0)
			{
				newnum = newnum - NUMBERS[i];
				roman = roman + LETTERS[i];
			}
		}
		wasroman = 1;
	}
		

	public void setRoman(String rom)
	{
		String dli = "";
		roman = rom;
		for (int i = 0;i < roman.length();i++)
		{
			if (i != roman.length() - 1)
			{
				if (NUMBERS[Arrays.asList(LETTERS).indexOf(i)] < 
						NUMBERS[Arrays.asList(LETTERS).indexOf((i + 1))])
				{
					dli = Character.toString(roman.charAt(i))
							+ Character.toString(roman.charAt((i + 1)));
					number = number + 
							NUMBERS[Arrays.asList(LETTERS).indexOf(dli)];
					roman.replace(roman.charAt(i), ' ');
					roman.replace(roman.charAt((i + 1)), ' ');
				}
				else
				{
					number = number + 
							NUMBERS[Arrays.asList(LETTERS).indexOf(i)];
					roman.replace(roman.charAt(i), ' ');
				}
			}
			else
			{
				number = number + 
						NUMBERS[Arrays.asList(LETTERS).indexOf(i)];
				roman.replace(roman.charAt(i), ' ');
			}
		}
		roman.replaceAll(" ", "");	
		wasroman = 2;
	}

	public Integer getNumber()
	{
		return number;
	}

	public String toString()
	{
		if (wasroman == 1)
		{
			return roman + "\n";
		}
		else if (wasroman == 2)
		{
			return number + "\n";
		}
		else
		{
			return null;
		}
	}
}